#!/bin/sh

. ${MODULESHOME}/init/sh
module load git

export SHiELD_SRC=${PWD%/*}/SHiELD_SRC/

mkdir -p ${SHiELD_SRC}
cd ${SHiELD_SRC}

release="release_20200819"
fms_release="2020.03-beta1"
fv3_release="user/lnz/shield2020"
phy_release="user/lnz/shield2020"

git clone -b ${fv3_release}  http://gitlab.gfdl.noaa.gov/Linjiong.Zhou/atmos_cubed_sphere.git
git clone -b ${phy_release}  http://gitlab.gfdl.noaa.gov/Linjiong.Zhou/fv3_gfsphysics.git
git clone -b ${fms_release}  http://github.com/NOAA-GFDL/FMS

#Automatic release tracking from Matt M.
echo $release >& ../SHiELD_build/release

