#!/bin/sh

. ${MODULESHOME}/init/sh
module load git

export SHiELD_SRC=${PWD%/*}/SHiELD_SRC/

mkdir -p ${SHiELD_SRC}
cd ${SHiELD_SRC}

release="test"
fms_release="2021.03"
fv3_release="main"
phy_release="main"

git clone -b ${fv3_release}  https://gitlab.gfdl.noaa.gov/fv3team/atmos_cubed_sphere.git
git clone -b ${phy_release}  https://gitlab.gfdl.noaa.gov/fv3team/fv3_gfsphysics.git
git clone -b ${fms_release}  https://github.com/NOAA-GFDL/FMS

#Automatic release tracking from Matt M.
echo $release >& ../SHiELD_build/release

